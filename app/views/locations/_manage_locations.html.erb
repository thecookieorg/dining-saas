<!-- This is for restaurant owners only! -->

<%- model_class = Location -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:restaurant_name) %></th>
        <th><%= model_class.human_attribute_name(:restaurant_phone_number) %></th>
        <th><%= model_class.human_attribute_name(:restaurant_address) %></th>
        <th><%= model_class.human_attribute_name(:about) %></th>
        <th><%= model_class.human_attribute_name(:contact_email) %></th>
        <th><%= model_class.human_attribute_name(:website) %></th>
        <th><%= model_class.human_attribute_name(:facebook) %></th>
        <th><%= model_class.human_attribute_name(:instagram) %></th>
        <th><%= model_class.human_attribute_name(:accept_takeout) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= link_to location.id, location_path(location) %></td>
          <td><%= location.restaurant_name %></td>
          <td><%= location.restaurant_phone_number %></td>
          <td><%= location.restaurant_address %></td>
          <td><%= location.about %></td>
          <td><%= location.contact_email %></td>
          <td><%= location.website %></td>
          <td><%= location.facebook %></td>
          <td><%= location.instagram %></td>
          <td><%= location.accept_takeout %></td>
          <td><%=l location.created_at %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_location_path(location), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        location_path(location),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_location_path,
              :class => 'btn btn-primary' %>